<html>
  <head>
    <title>
    </title>
  </head>
  <body>
    <div class="container">
      <div id="account_field">
        <%= text_field_tag "account_name", "", placeholder: "Account or Contact Name" %>
        <span><button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Search Account/Contact Name</button>
      </div>
        <!-- Trigger the modal with a button -->


        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Account Name</h4>
              </div>
              <div class="modal-body">
                <%= text_field_tag "account_name", "", placeholder: "For e.g. Company 1", id: "account_name" %>
                <div id="search-results">
                  
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

      </div>
  </body>
</html>
